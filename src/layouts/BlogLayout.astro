---
export interface Props {
	title: string;
	description?: string;
	pubDate?: Date;
}

const { title, description, pubDate } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{description && <meta name="description" content={description} />}
		{pubDate && <meta property="article:published_time" content={pubDate.toISOString()} />}
	</head>
	<body>
		<nav class="nav">
			<div class="nav-container">
				<a href={import.meta.env.BASE_URL} class="nav-logo">Blog</a>
				<div class="nav-links">
					<a href={import.meta.env.BASE_URL}>Home</a>
				</div>
			</div>
		</nav>
		<main class="main">
			<slot />
		</main>
		<footer class="footer">
			<p>&copy; {new Date().getFullYear()} Blog. Built with Astro.</p>
		</footer>
	</body>
</html>

<style>
	:global(html) {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		line-height: 1.6;
		color: #1a1a1a;
		background: #ffffff;
	}

	:global(body) {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.nav {
		border-bottom: 1px solid #e5e5e5;
		background: #ffffff;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.nav-container {
		max-width: 800px;
		margin: 0 auto;
		padding: 1rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		font-size: 1.25rem;
		font-weight: 600;
		text-decoration: none;
		color: #1a1a1a;
	}

	.nav-links {
		display: flex;
		gap: 1.5rem;
	}

	.nav-links a {
		text-decoration: none;
		color: #666;
		transition: color 0.2s;
	}

	.nav-links a:hover {
		color: #1a1a1a;
	}

	.main {
		flex: 1;
		max-width: 800px;
		width: 100%;
		margin: 0 auto;
		padding: 2rem;
	}

	.footer {
		border-top: 1px solid #e5e5e5;
		background: #fafafa;
		padding: 2rem;
		text-align: center;
		color: #666;
		font-size: 0.875rem;
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 1rem;
		}

		.main {
			padding: 1.5rem 1rem;
		}
	}
</style>

