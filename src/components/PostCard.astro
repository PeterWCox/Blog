---
export interface Props {
	title: string;
	description?: string;
	pubDate: Date;
	slug: string;
}

const { title, description, pubDate, slug } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('en-GB', {
	year: 'numeric',
	month: 'long',
	day: 'numeric'
});
---

<article class="post-card">
	<time class="post-date" datetime={pubDate.toISOString()}>
		{formattedDate}
	</time>
	<h2 class="post-title">
		<a href={`/posts/${slug}`}>{title}</a>
	</h2>
	{description && <p class="post-description">{description}</p>}
	<a href={`/posts/${slug}`} class="post-link">Read more â†’</a>
</article>

<style>
	.post-card {
		border-bottom: 1px solid #e5e5e5;
		padding: 2rem 0;
	}

	.post-card:last-child {
		border-bottom: none;
	}

	.post-date {
		display: block;
		font-size: 0.875rem;
		color: #666;
		margin-bottom: 0.5rem;
	}

	.post-title {
		margin: 0 0 0.75rem 0;
		font-size: 1.75rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.post-title a {
		color: #1a1a1a;
		text-decoration: none;
		transition: color 0.2s;
	}

	.post-title a:hover {
		color: #0066cc;
	}

	.post-description {
		color: #666;
		margin: 0 0 1rem 0;
		line-height: 1.6;
	}

	.post-link {
		color: #0066cc;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s;
	}

	.post-link:hover {
		color: #0052a3;
	}

	@media (max-width: 768px) {
		.post-card {
			padding: 1.5rem 0;
		}

		.post-title {
			font-size: 1.5rem;
		}
	}
</style>

